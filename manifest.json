{
  "manifest_version": 3,
  "name": "Timestamp Inserter",
  "version": "1.0",
  "description": "Inserts current timestamp in DD/MM/YYYY HH:MM format",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "insert-timestamp": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Insert timestamp"
    }
  }
}